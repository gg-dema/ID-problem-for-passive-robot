<?xml version="1.0" ?>
<sdf version="1.6">

  <model name="planar_3dof_robot">
    <static>false</static>
   
    <link name="base_link">
    
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.1 0.1 0.05</size>
          </box>
        </geometry>
      </visual>
     
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.1 0.1 0.05</size>
          </box>
        </geometry>
      </collision>
      
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <!-- Prismatic Joint -->
    <joint name="prismatic_joint" type="prismatic">
      <parent>base_link</parent>
      <child>link1</child>
      <axis>
        <xyz>1 0 0</xyz>
      </axis>
      <limit>
        <lower>-1.0</lower>
        <upper>1.0</upper>
        <effort>10</effort>
        <velocity>1.0</velocity>
      </limit>
      <pose>0 0 0 0 0 0</pose>
      <dynamics>
        <damping>0.0</damping>
        <friction>0.0</friction>
      </dynamics>
    </joint>

    <link name="link1">
      <visual name="link1_visual">
        <geometry>
          <box>
            <size>0.1 0.05 0.05</size>
          </box>
        </geometry>
      </visual>
      <collision name="link1_collision">
        <geometry>
          <box>
            <size>0.1 0.05 0.05</size>
          </box>
        </geometry>
      </collision>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <!-- First Revolute Joint -->
    <joint name="revolute_joint1" type="revolute">
      <parent>link1</parent>
      <child>link2</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
      <limit>
        <lower>-3.14159</lower>
        <upper>3.14159</upper>
        <effort>10</effort>
        <velocity>1.0</velocity>
      </limit>
      <pose>0 0 0 0 0 0</pose>
      <dynamics>
        <damping>0.0</damping>
        <friction>0.0</friction>
      </dynamics>
    </joint>

    <link name="link2">
      <visual name="link2_visual">
        <geometry>
          <box>
            <size>0.1 0.05 0.05</size>
          </box>
        </geometry>
      </visual>
      <collision name="link2_collision">
        <geometry>
          <box>
            <size>0.1 0.05 0.05</size>
          </box>
        </geometry>
      </collision>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <!-- Second Revolute Joint -->
    <joint name="revolute_joint2" type="revolute">
      <parent>link2</parent>
      <child>link3</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
      <limit>
        <lower>-3.14159</lower>
        <upper>3.14159</upper>
        <effort>10</effort>
        <velocity>1.0</velocity>
      </limit>
      <pose>0 0 0 0 0 0</pose>
      <dynamics>
        <damping>0.0</damping>
        <friction>0.0</friction>
      </dynamics>
    </joint>

    <link name="link3">
      <visual name="link3_visual">
        <geometry>
          <box>
            <size>0.1 0.05 0.05</size>
          </box>
        </geometry>
      </visual>
      <collision name="link3_collision">
        <geometry>
          <box>
            <size>0.1 0.05 0.05</size>
          </box>
        </geometry>
      </collision>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.01</iyy>
          <iyz>0.0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

  </model>
</sdf>
